<resources>

    <!-- Tema de la aplicación -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Colores primarios -->
        <item name="colorPrimary">@color/aviator_blue_primary</item>
        <item name="colorPrimaryVariant">@color/aviator_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/aviator_blue_secondary</item>
        <item name="colorSecondaryVariant">@color/aviator_blue_light</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Colores de fondo -->
        <item name="android:background">@color/white</item>


        <!-- Colores de texto -->
        <item name="android:textColor">@color/aviator_blue_primary</item>
        <item name="colorOnBackground">@color/aviator_blue_primary</item>

        <!-- Colores de botones -->
        <item name="colorButtonNormal">@color/aviator_blue_primary</item>

        <!-- Colores de íconos -->
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/aviator_blue_light</item>
        <item name="colorControlHighlight">@color/aviator_blue_secondary</item>

        <!-- Estilo de botones -->
        <item name="buttonStyle">@style/CustomButton</item>
    </style>

    <!-- Estilo de botones personalizados -->
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/aviator_blue_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Estilo de botones con borde -->
    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:strokeColor">@color/aviator_blue_primary</item>
        <item name="android:textColor">@color/aviator_blue_primary</item>
        <item name="cornerRadius">8dp</item>
    </style>

</resources>
